{
    // Place your settings in this file to overwrite default and user settings.
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,

        ".sourcemaps": true,
        "node_modules": true,
        "platforms": true,
        "plugins": true,
        "resources": true,
        "www": true,

        "ionic.config.json": true,
        "package-lock.json": true
    },

    "editor.formatOnSave": true,
    "editor.tabSize": 4,
    "editor.insertSpaces": true,

    "prettier.cssEnable": [],

    "typescript.tsdk": "./node_modules/typescript/lib",
    "typescript.format.enable": false,

    "json.format.enable": false,
    "html.format.enable": false,
    "javascript.format.enable": false,

    "typescriptHero.resolver.disableImportsSorting": false,
    "typescriptHero.resolver.multiLineTrailingComma": false,
    "typescriptHero.resolver.organizeOnSave": true,
    "typescriptHero.resolver.multiLineWrapThreshold": 80,

    "tslint.nodePath": "./node_modules/tslint/lib",
    "tslint.configFile": "./tslint.json",
    "tslint.enable": true,
    "tslint.alwaysShowRuleFailuresAsWarnings": true,

    "vsicons.presets.angular": true
}
